<Page x:Class="AppWithDB.Pages.ClothPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppWithDB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClothPage">

    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="DbGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding clothCode}" Header="Артикул" />
                <DataGridTextColumn Binding="{Binding clothName}" Header="Наименование"/>
                <DataGridTextColumn Binding="{Binding clothColor}" Header="Цвет"/>
                <DataGridTextColumn Binding="{Binding clothPattern}" Header="Рисунок"/>
                <DataGridTextColumn Binding="{Binding clothPicture}" Header="Изображение"/>
                <DataGridTextColumn Binding="{Binding clothComposition}" Header="Состав"/>
                <DataGridTextColumn Binding="{Binding clothWidth}" Header="Ширина"/>
                <DataGridTextColumn Binding="{Binding clothLength}" Header="Длина"/>
                <DataGridTextColumn Binding="{Binding clothPrice}" Header="Цена"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
