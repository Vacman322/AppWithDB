<Page x:Class="AppWithDB.Pages.ProductPadge"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppWithDB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPadge">

    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="DbGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding productCode}" Header="Артикул" />
                <DataGridTextColumn Binding="{Binding productName}" Header="Наименование"/>
                <DataGridTextColumn Binding="{Binding productWidth}" Header="Ширина"/>
                <DataGridTextColumn Binding="{Binding productLength}" Header="Длина"/>
                <DataGridTextColumn Binding="{Binding productPicture}" Header="Изображение"/>
                <DataGridTextColumn Binding="{Binding Сomment}" Header="Комментарий"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
