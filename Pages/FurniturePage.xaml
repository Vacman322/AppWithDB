<Page x:Class="AppWithDB.Pages.FurniturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppWithDB.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FurniturePage">

    <Grid>
        <DataGrid AutoGenerateColumns="False" x:Name="DbGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding furCode}" Header="Артикул" />
                <DataGridTextColumn Binding="{Binding furName}" Header="Наименование"/>
                <DataGridTextColumn Binding="{Binding furType}" Header="Тип"/>
                <DataGridTextColumn Binding="{Binding furWidth}" Header="Ширина"/>
                <DataGridTextColumn Binding="{Binding furLength}" Header="Длина"/>
                <DataGridTextColumn Binding="{Binding furWeight}" Header="Вес"/>
                <DataGridTextColumn Binding="{Binding furPicture}" Header="Изображение"/>
                <DataGridTextColumn Binding="{Binding furPrice}" Header="Цена"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
